    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homeSearchBackIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/home_seletor_search"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/ciist_search" />

        <View
            android:layout_width="3dip"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_edittext"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <EditText
                android:id="@+id/homeSearchEt"
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_edittext"
                android:ems="10"
                android:hint="请输入搜索内容"
                android:paddingLeft="5dp">

                <requestFocus />
            </EditText>

            <ImageView
                android:id="@+id/homeSearchIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:src="@android:drawable/ic_menu_search" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/homeSearchShowTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/homeSearchPb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible" />

        <com.ciist.customview.xlistview.XListView
            android:id="@+id/homeSearchLv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.ciist.customview.xlistview.XListView>

        <ImageView
            android:id="@+id/homeSearchPosition"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|right"
            android:padding="5dp"
            android:layout_marginBottom="70dp"
            android:layout_marginRight="6dp"
            android:background="#999999"
            android:visibility="invisible"
            android:src="@drawable/home_icon_zhiding"

            />
    </FrameLayout>
