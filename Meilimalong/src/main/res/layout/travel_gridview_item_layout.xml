<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/horzontal_recyclerview_item_selector"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/content_one_right_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="@color/default_pic_bg_color" />

        <TextView
            android:id="@+id/content_one_right_titletxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_one_right_img"
            android:layout_marginTop="5dp"
            android:text="五洲商务酒店"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/content_one_right_pricetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_one_right_titletxt"
            android:layout_marginTop="5dp"
            android:textColor="#f00"
            android:text="￥950"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/content_one_right_merchantxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/content_one_right_titletxt"
            android:layout_marginTop="5dp"
            android:textColor="#666"
            android:textSize="12sp"
            android:text="马龙县/奢华型" />
    </RelativeLayout>

</LinearLayout>