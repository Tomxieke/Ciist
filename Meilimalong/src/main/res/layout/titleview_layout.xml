<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ciist_titleview_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@android:color/holo_blue_bright"
    android:padding="5dp">

    <ImageView
        android:id="@+id/ciist_titleview_left_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/ciist_titleview_click_bg_selector"
        android:layout_marginLeft="5dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ciist_titleview_left_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ciist_titleview_click_bg_selector"
        android:textSize="18sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ciist_titleview_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:layout_centerInParent="true"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/ciist_titleview_right_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/ciist_titleview_click_bg_selector"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ciist_titleview_right_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"
        android:textSize="18sp"
        android:background="@drawable/ciist_titleview_click_bg_selector"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>

</RelativeLayout>