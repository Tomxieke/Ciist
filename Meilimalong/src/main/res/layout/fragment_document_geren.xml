<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:myview="http://schemas.android.com/apk/res-auto"
    tools:context="com.ciist.app.DocumentManaFragment">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/document_qiye_scr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dcdcdc"
        android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dcdcdc"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">


        <com.ciist.customview.xlistview.ScrollListView
            android:id="@+id/documen_qiye_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#00000000"
            android:background="#dcdcdc"></com.ciist.customview.xlistview.ScrollListView>

    </LinearLayout>
</ScrollView>
</LinearLayout>
