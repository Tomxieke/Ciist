<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <com.ciist.customview.xlistview.CiistTitleView
            android:id="@+id/yijian_titleview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            myview:ciist_left_icn="@drawable/ciist_back"
            myview:ciist_text_color="#FFF0F5"
            myview:ciist_title_text="意见征集"
            myview:ciist_titleview_bg="#d33336" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="8"
            android:background="#dcdcdc"
            android:orientation="vertical">

            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/yijian_scr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dcdcdc"
                android:scrollbars="none">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/web_comment_all_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/yijian_lin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="1dp"
                            android:background="#dcdcdc"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#ffffff"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0.5dp"
                                    android:orientation="horizontal"
                                    android:paddingBottom="5dp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingTop="5dp">

                                    <EditText
                                        android:id="@+id/yijian_name_edi"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/banjian_shape"
                                        android:hint="姓名"
                                        android:paddingBottom="5dp"
                                        android:paddingTop="5dp"
                                        android:textSize="16sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingBottom="5dp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingTop="5dp">

                                    <EditText
                                        android:id="@+id/yijian_phonenum_edi"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/banjian_shape"
                                        android:hint="电话"
                                        android:paddingBottom="5dp"
                                        android:paddingTop="5dp"
                                        android:phoneNumber="true"
                                        android:textSize="16sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingBottom="5dp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingTop="5dp">

                                    <EditText
                                        android:id="@+id/yijian_neirong_edi"
                                        android:layout_width="match_parent"
                                        android:layout_height="200dp"
                                        android:background="@drawable/banjian_shape"
                                        android:hint="意见内容"
                                        android:gravity="start"
                                        android:padding="5dp"
                                        android:textSize="16sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/yijian_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/banjian_chaxunon"
                android:text="提交意见"
                android:textColor="#FFF0F5"

                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>