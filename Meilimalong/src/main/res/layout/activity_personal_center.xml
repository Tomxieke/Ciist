<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:myview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <com.ciist.customview.xlistview.CiistTitleView
        android:id="@+id/personal_c_titleview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        myview:ciist_left_icn="@drawable/ciist_back"
        myview:ciist_right_icn="@drawable/ciist_home_search_search"
        myview:ciist_text_color="#FFF0F5"
        myview:ciist_title_text="个人中心"
        myview:ciist_titleview_bg="#20c993"></com.ciist.customview.xlistview.CiistTitleView>
    .CiistTitleView


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/personal_c_user_ima"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/default_mini_singer"
            />
        <TextView
            android:id="@+id/personal_c_user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="用户名"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
       <Button
           android:id="@+id/personal_c_yibanjie_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:text="已办结"
           android:textColor="#ffffff"
           android:textSize="16sp"
           android:background="@drawable/personal_selector"
           />

        <Button
            android:id="@+id/personal_c_daibanli_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="待办理"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="@drawable/personal_selector"
            />

        <Button
            android:id="@+id/personal_c_zhuxiao_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="注销登陆"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="@drawable/personal_selector"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_c_shenqing_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="我的申请"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingBottom="10dp"
            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/personal_c_yuyue_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="我的预约"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingBottom="10dp"
            />


    </LinearLayout>



    <LinearLayout
        android:id="@+id/personal_c_zixun_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="我的咨询"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingBottom="10dp"
            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/personal_c_yijian_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="我的意见"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingBottom="10dp"
            />


    </LinearLayout>



    <LinearLayout
        android:id="@+id/personal_c_tousu_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="我的投诉"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingBottom="10dp"
            />


    </LinearLayout>




    <LinearLayout
        android:id="@+id/personal_c_shoucang_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="我的收藏"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingBottom="10dp"
            />


    </LinearLayout>





</LinearLayout>
